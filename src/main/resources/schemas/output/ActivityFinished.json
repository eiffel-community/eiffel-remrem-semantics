{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "UUID": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    },

    "verdict": {
      "enum": ["SUCCESSFUL", "UNSUCCESSFUL", "FAILED", "ABORTED", "TIMED_OUT", "INCONCLUSIVE"]
    }
  },

  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "time": {
          "type": "integer"
        },
        "domainId": {
          "type": "string"
        },
        "id": {
          "$ref": "#/definitions/UUID"
        }
      },
      "required": [
        "type",
        "version",
        "time",
        "domainId",
        "id"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "properties": {
        "outcome": {
          "type": "object",
          "properties": {
            "verdict": {
              "$ref": "#/definitions/verdict"
            },
            "description": {
              "type": "string"
            }
          },
          "required": [
            "verdict",
            "description"
          ],
          "additionalProperties": false
        },
        "persistentLogs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "uri": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "uri"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "outcome",
        "persistentLogs"
      ]
    },
    "links": {
      "type": "object",
      "properties": {
        "activityExecution": {
          "type": "string"
        }
      },
      "required": [
        "activityExecution"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "meta",
    "data",
    "links"
  ],
  "additionalProperties": false
}