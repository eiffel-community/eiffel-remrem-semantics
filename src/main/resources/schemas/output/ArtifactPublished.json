{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "UUID": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    },

    "locationsType": {
      "enum": ["ARTIFACTORY", "NEXUS", "PLAIN", "OTHER"]
    }

  },

  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "time": {
          "type": "integer"
        },
        "domainId": {
          "type": "string"
        },
        "id": {
          "$ref": "#/definitions/UUID"
        }
      },
      "required": [
        "type",
        "version",
        "time",
        "domainId",
        "id"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "properties": {
        "locations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "$ref": "#/definitions/locationsType"
              },
              "uri": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "uri"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "locations"
      ],
      "additionalProperties": false
    },
    "links": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string"
        },
        "artifact": {
          "type": "string"
        }
      },
      "required": [
        "artifact"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "meta",
    "data",
    "links"
  ],
  "additionalProperties": false
}